<% if (allrecs.length > 0) {%>
    <table>
        <tr>
            <th>Inventory ID</th>
            <th>Product ID</th>
            <th>Stock Level</th>
            <th>Supplier ID</th>
            <th>Cost Per Unit</th>
            <th colspan="3">Actions</th>
        </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr> 
            <td><%= recref.inventoryid %></td>
            <td><%= recref.productid %></td>
            <td><%= recref.stocklvl %></td>
            <td><%= recref.supplierid %></td>
            <td><%= Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(recref.costperunit) %> </b> <br/>%></td>
            <td><a href='/inventory/<%= recref.inventoryid %>/show'>Details</a></td>
            <td><a href='/inventory/<%= recref.inventoryid %>/edit'>Edit</a></td>
            <td><a href='/inventory/<%= recref.inventoryid %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %> 

