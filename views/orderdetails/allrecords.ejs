<% if (allrecs.length > 0) {%>
    <table>
        <tr>
            <th>Order Details ID</th>
            <th>Sale Order ID</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Subtotal</th>
            <th colspan="3">Actions</th>
        </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr> 
            <td><%= recref.orderdetailsid %></td>
            <td><%= recref.saleorderid %></td>
            <td><%= recref.productid %></td>
            <td><%= recref.quantity %></td>
            <td><%= Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(recref.subtotal) %> </b> <br/>%></td>
            <td><a href='/orderdetails/<%= recref.orderdetailsid %>/show'> Details</a></td>
            <td><a href='/orderdetails/<%= recref.orderdetailsid %>/edit'>Edit</a></td>
            <td><a href='/orderdetails/<%= recref.orderdetailsid %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>

<p> <a href='/orderdetails/addrecord'>Add New</a> </p>

