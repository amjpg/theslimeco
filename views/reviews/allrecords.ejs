<% if (allrecs.length > 0) {%>
    <table>
        <tr>
            <th>Review ID</th>
            <th>Product ID</th>
            <th>Customer ID</th>
            <th>Review Date</th>
            <th>Comments</th>
            <th>Rating</th>
            <th colspan="3">Actions</th>
        </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr> 
            <td><%= recref.reviewid %></td>
            <td><%= recref.productid %></td>
            <td><%= recref.customerid %></td>
            <td><%= recref.reviewdate.toISOString().split('T')[0] %></td>
            <td><%= recref.comments %></td>
            <td><%= recref.rating %></td>
            <td><a href='/reviews/<%= recref.reviewid %>/show'>Details</a></td>
            <td><a href='/reviews/<%= recref.reviewid %>/edit'>Edit</a></td>
            <td><a href='/reviews/<%= recref.reviewid %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>No Records Available</p>
    <% } %> 

<p> <a href='/reviews/addrecord'>Add New</a> </p>

